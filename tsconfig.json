{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "importHelpers": false,
    "lib": ["esnext", "dom", "DOM.Iterable", "ScriptHost"],
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node"],
    "typeRoots": ["./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "lib",
    "dist",
    "build",
    "node_modules"
  ]
}
